<div class="left_sidebar_area">
    <aside class="left_widgets p_filter_widgets">
        <div class="l_w_title">
            <h3>Browse Categories</h3>
        </div>
        <div class="widgets_inner">
            <ul class="list">
                @foreach (var category in Model)
                {
                    <li>
                        <a href="?categoryId=@category.id">@category.name</a>
                    </li>
                }
            </ul>
        </div>
    </aside>
</div>